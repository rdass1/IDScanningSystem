            <form action="/"method="POST">
                <% for(var i = 0; i < users.length; i++){ %>
                
                <div class="user-profile-box" style="cursor: pointer;" onclick="window.location='/dashboard/viewmember?id=<%=users[i].cardID%>';">
                    <table>
                        <tbody class="tableBody">
                            
                                
                                    <tr>
                                    <td style="padding: 80px;">Image</td> 
                                    </tr>
                                    <tr>
                                        <td><%=users[i].lastName +', '+users[i].firstName%></td>
                                    </tr>
                                    <tr>
                                        <td><%=users[i].cardID%></td>
                                    </tr>
                                    
                                
                        </tbody>
                    </table>
                </div>
            
                <% } %>
                
            </form>
        </div>
        
